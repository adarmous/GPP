@model IEnumerable<GPP.Library.TypeViewModel>

@{
    ViewBag.Title = "All Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Types</h2>

<p>
    @Html.ActionLink("Create New", "AddType")
</p>

<p>When deleting types, make sure all milestones/tasks of the type you are deleting are either deleted or changed to another type first. </p>

<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Colour
        </th>
        <th>
            Milestone Task
        </th>
        <th>
            Event Task
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colour)
        </td>

         <td>
            @Html.DisplayFor(modelItem => item.Milestone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "EditTyype", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteType", new { id=item.Id })
        </td>
    </tr>
}

</table>
