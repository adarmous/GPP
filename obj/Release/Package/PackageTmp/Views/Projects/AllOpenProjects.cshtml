@model IList<GPP.Library.ProjectViewModel>

@{
    ViewBag.Title = "All Open Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Projects</h2>

<p>
    @Html.ActionLink("Add Project", "AddProject", "Projects")
    @Html.ActionLink("Closed Projects", "AllClosedProjects", "Projects")
    @Html.ActionLink("Timeframes", "AllTimeframes", "Projects")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Start
        </th>
        <th>
            Finish
        </th>
        <th>
            Last Updated
        </th>
        <th>
            Closed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BaselineStart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BaselineFinish)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Closed)
        </td>
        <td>
            @Html.ActionLink("Edit Project", "EditProject", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteProject", new { id=item.Id }) |
            @Html.ActionLink("Milestones", "AllMilestones", new { id=item.Id })
        </td>
    </tr>
}

</table>
