@model GPP.Library.MilestoneViewModel

@{
    ViewBag.Title = "Edit Milestone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Milestone</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Milestone Details</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.ProjectId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BaselineStart)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BaselineStart)
            @Html.ValidationMessageFor(model => model.BaselineStart)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BaselineFinish)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BaselineFinish)
            @Html.ValidationMessageFor(model => model.BaselineFinish)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Milestones", "AllMilestones", new { id = Model.ProjectId })
</div>
